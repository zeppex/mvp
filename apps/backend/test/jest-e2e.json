{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".*(e2e-spec|test)\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "maxWorkers": 1,
  "forceExit": true,
  "detectOpenHandles": true,
  "setupFilesAfterEnv": ["<rootDir>/test-setup.ts"]
}
